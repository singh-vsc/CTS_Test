<div class="mz-productlist row {% block module-classes %}{% endblock module-classes %}">
    {% if model.items %}
    <ul id="product-list-ul" class="mz-productlist-list row ml-list-view-toggle grid-view {% block list-classes %}{% endblock list-classes %}">
        {% for prod in model.items %}
        <li class="mz-productlist-item col-xs-6 col-sm-4{% if prod.variations %} mz-product-has-variation{%endif%}" data-mz-product="{{ prod.productCode }}">{% include "modules/product/product-listing" with model=prod %}</li>
        {% endfor %}
    </ul>
    {% endif %}
    <div id="loaderIcon"></div>
    {% require_script "modules/category/infinite-scroller" %}
</div>